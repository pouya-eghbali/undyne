html, body
  width 100%
  height 100%
  padding 0
  margin 0
  background #6272a4

body
  display flex
  flex-direction column
  align-items center
  justify-content center
  font-family "Open Sans", sans-serif

.page
  width 960px
  padding 2em
  padding-top 0
  padding-bottom 4em

.undyne-container
  border-radius 6px
  box-shadow 0px 0px 24px rgba(0,0,0,0.7)
  padding 1em
  background #282a36

#undyne
  height 520px
  width 960px
  border none
  cursor text
  outline none
