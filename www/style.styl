html, body
  width 100%
  height 100%
  padding 0
  margin 0
  background #282a36
  color #f8f8f2

body
  display flex
  flex-direction column
  align-items center
  font-family "Open Sans", sans-serif

.page
  width 960px
  max-width 100%
  padding 2em
  box-sizing border-box

.undyne-container
  border-radius 6px
  box-shadow 0px 0px 24px rgba(0,0,0,0.7)
  padding 1em
  background #282a36
  max-width calc(100% - 2em)
  box-sizing border-box

#undyne
  height 520px
  width 960px
  border none
  cursor text
  outline none
